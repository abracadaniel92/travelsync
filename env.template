# Documents to Calendar - Environment Variables
# Copy this file to .env and fill in your actual values
# Command: cp env.template .env

# Google Gemini API Key (Required)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-gemini-api-key-here

# Google Calendar Credentials (Required)
# Option 1: Base64 encoded credentials.json (recommended for Docker)
# Encode with: base64 -i credentials.json | tr -d '\n'
CREDENTIALS_JSON=your-base64-encoded-credentials-here
# OR use GOOGLE_CALENDAR_CREDENTIALS_JSON (same value)
GOOGLE_CALENDAR_CREDENTIALS_JSON=

# Admin Authentication (Required)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here

# JWT Secret Key (Required)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-64-character-hex-string-here

# Google Calendar Settings
GOOGLE_CALENDAR_HEADLESS=true
GOOGLE_CALENDAR_ID=primary

# Optional: Email Configuration (for email forwarding)
# EMAIL_ADDRESS=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_AUTO_CHECK=false
# EMAIL_CHECK_INTERVAL=300

